model Post {
   id                String @id @default(uuid())
   image             String
   like              Int @default(0)
   description       String
   user_id           String
   user              User  @relation(fields: [user_id], references: [id])
   created_at        DateTime    @default(now())
}

model Feed {
   id String         @id @default(uuid())
   image             String
   title             String
   subTitle          String
   texto             String
   user_id           String
   user              User @relation(fields: [user_id], references: [id])   
   created_at        DateTime   
}

model Consumo {
   id                String         @id @default(uuid())
   consumidor_id     String?
   presstador_id     String?
   type              String
   valor             String
   descricao         String
   created_at        DateTime @default(now())
}

model Transaction {
   id             String @id @default(uuid())
   consumidor_id  String
   prestador_id   String
   nome           String
   valor          String
   descricao      String
}
