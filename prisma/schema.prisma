datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

generator client {
   provider = "prisma-client-js"
}

model User {
   id                String      @id      @default(uuid())
   nome              String
   membro            String      @unique
   senha             String
   whats             String
   logotipo          String?
   avatar            String?
   workName          String
   token             String?
   CNPJ              String
   CPF               String
   ramo              String
   enquadramento     String
   email             String
   links             String[]
   adm               Boolean     
   created_at        DateTime    @default(now())
   post              Post[]
   feed              Feed[]
}

